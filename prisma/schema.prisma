generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Image {
  id          String   @id @default(cuid())
  shareId     String   @unique
  blobUrl     String
  filename    String
  mimeType    String
  fileSize    Int
  uploadedAt  DateTime @default(now())
  views       Int      @default(0)

  @@index([shareId])
}
